generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drone {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  serialNumber String   @unique
  model        String
  manufacturer String
  mac          String   @unique
  ipv4         String
  ipv6         String
  firmware     String
  positionY    Float
  positionX    Float
  attitude     Float
}

model Pilot {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  pilotId     String   @unique
  firstName   String
  lastName    String
  phoneNumber String
  createdDt   DateTime
  email       String
}
