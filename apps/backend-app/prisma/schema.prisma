generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drone {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  serialNumber String   @unique
  model        String
  manufacturer String
  mac          String   @unique
  ipv4         String
  ipv6         String
  firmware     String
  positionY    Float
  positionX    Float
  altitude     Float
  Pilot        Pilot    @relation(fields: [pilotId], references: [id], onDelete: Cascade)
  pilotId      Int      @unique
}

model Pilot {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  pilotId     String   @unique
  firstName   String
  lastName    String
  phoneNumber String   @unique
  createdDt   DateTime
  email       String   @unique
  drone       Drone?
}
